# Example Configuration File for Automated Kubernetes Lab Build
# Copy this file to config.env and customize for your environment

# ==============================================================================
# Cluster Configuration
# ==============================================================================

# Name of the Kubernetes cluster
CLUSTER_NAME="k8s-lab"

# ==============================================================================
# Master Node Configuration
# ==============================================================================

# Master node hostname or IP address
MASTER_NODE="k8s-master"
MASTER_IP="192.168.1.10"

# ==============================================================================
# Worker Node Configuration
# ==============================================================================

# Number of worker nodes
WORKER_COUNT=2

# Worker node hostnames/IPs (space-separated)
# Format: "hostname1 hostname2 hostname3" or "IP1 IP2 IP3"
WORKER_NODES=("k8s-worker-1" "k8s-worker-2")
WORKER_IPS=("192.168.1.11" "192.168.1.12")

# ==============================================================================
# Network Configuration
# ==============================================================================

# Subnet for pod networking (CIDR notation)
# This is the network range that Kubernetes will use for pod communication
SUBNET="10.244.0.0/16"
SUBNET_CIDR="10.244.0.0/16"

# Make containers publicly accessible (true/false)
# If true, MetalLB will be configured for LoadBalancer services
PUBLIC_CONTAINERS=false

# ==============================================================================
# Kubernetes Configuration
# ==============================================================================

# Kubernetes version (e.g., 1.28, 1.27, 1.26)
K8S_VERSION="1.28"

# Container runtime (containerd, docker)
# Note: containerd is recommended for modern Kubernetes
CONTAINER_RUNTIME="containerd"

# ==============================================================================
# CNI Plugin Configuration
# ==============================================================================

# CNI plugin to use (calico, flannel, weave)
# calico:  High-performance, network policies support
# flannel: Simple, lightweight overlay network
# weave:   Full mesh network, DNS support
CNI_PLUGIN="calico"

# ==============================================================================
# Optional Add-ons
# ==============================================================================

# Install MetalLB for load balancing (true/false)
INSTALL_METALLB=true

# Install NGINX Ingress Controller (true/false)
INSTALL_INGRESS_NGINX=true

# Install Kubernetes Dashboard (true/false)
INSTALL_DASHBOARD=true

# Install Prometheus for monitoring (true/false)
INSTALL_PROMETHEUS=false

# Install local storage provisioner (true/false)
INSTALL_LOCAL_STORAGE=true

# ==============================================================================
# Advanced Configuration
# ==============================================================================

# Dry-run mode (true/false) - don't make actual changes
DRY_RUN=false

# Enable debug output (true/false)
DEBUG=false

# Skip SSH connectivity validation (true/false)
SKIP_VALIDATION=false

# Log file path
LOG_FILE="./deployment.log"

# ==============================================================================
# SSH Configuration
# ==============================================================================

# SSH user to use for remote connections
SSH_USER="ubuntu"

# SSH key file (leave empty to use default)
SSH_KEY=""

# SSH connection timeout in seconds
SSH_TIMEOUT=10
